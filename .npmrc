# Set the default registry to the public npm registry
registry=https://registry.npmjs.org/

# Always save exact version (don't use ^ or ~)
save-exact=true

# Enable package-lock.json to ensure consistent installs
package-lock=true

# Set the cache directory
cache=${HOME}/.npm

# Set the temporary directory for npm operations
tmp=${HOME}/.npm/tmp

# Set the log level (warn, error, info, etc.)
loglevel=warn

# Set to true to show progress during npm install
progress=true

# Set to true to show timing information
timing=true

# Set to true to show color output in the terminal
color=true
